{
  "manifest_version": 3,
  "name": "Cyber Kavach",
  "version": "1.0.0",
  "description": "Detect phishing and malicious websites in real-time",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Cyber Kavach"
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
 "web_accessible_resources": [
  {
    "resources": ["icons/company_logo.png", "popup/*"],
    "matches": ["<all_urls>"]
  }
],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}