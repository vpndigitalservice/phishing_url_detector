{
  "manifest_version": 3,
  "name": "Phish Guard",
  "version": "1.0.0",
  "description": "Detect phishing and malicious websites in real-time",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/*"
  ],
  
  "action": {
    "default_popup":"popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
    "web_accessible_resources": [
    {
      "resources": ["popup/settings.html", "popup/help.html"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}